<div id="loginbox">
    <h3>Sign In</h3>
    <div style="padding:10px;border: 1px solid gray">
        @*<form asp-controller="Home" asp-action="SaveForm" data-ajax="true" data-ajax-method="POST">*@
        @using (@Html.BeginForm("SaveForm","Home",FormMethod.Post))
        { 
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="password">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
            <div class="form-group">
                <div class="col-md-12 control">
                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                        Don't have an account!
                        <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                            Sign Up Here
                        </a>
                    </div>
                </div>
            </div>

       }
    </div>
</div>

<div id="signupbox" style="display:none;">
    <h3>Sign Up</h3>
    <div style="float:right; font-size: 85%; position: relative; "><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()">Sign In</a></div>

    <div style="padding:10px;border: 1px solid gray">
        @*<form asp-controller="Home" asp-action="CreateAccount" data-ajax="true" data-ajax-method="POST">*@
            @using (@Html.BeginForm("CreateAccount", "Home", FormMethod.Post))
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Email">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="password" name="Password"  placeholder="Enter password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="inputAddress" name="inputAddress" placeholder="1234 Main St">
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Gender">Gender</label>
                        <select id="Gender" Name="Gender" class="form-control">
                            <option selected>Choose Gender...</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Others</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputMunicipility">Municipility</label>
                        <select id="inputMunicipility" name="inputMunicipility" class="form-control">
                            <option selected>Choose Municipility...</option>
                            <option>Arani</option>
                            <option>Vellore</option>
                            <option>Chennai</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputZip">Zip</label>
                        <input type="text" class="form-control" id="inputZip" name="inputZip">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            }
    </div>
</div>
